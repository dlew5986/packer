{
    "variables":
    {
        "placeholder": ""
    },

    "builders": [
        {
            "name": "virtualbox",
            "type": "virtualbox-iso",
            "iso_url": "iso/17763.737.190906-2324.rs5_release_svc_refresh_SERVER_EVAL_x64FRE_en-us_1.iso",
            "iso_checksum": "sha256:549bca46c055157291be6c22a3aaaed8330e78ef4382c99ee82c896426a1cee1",

            "guest_os_type": "Windows2019_64",
            "guest_additions_mode": "attach",
            "headless": "true",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--cpus",   "2" ]
            ],
            "floppy_files": [
                "files/Autounattend.xml",
                "files/winrm.ps1",
                "files/sysprep_unattend.xml",
                "files/sysprep_shutdown.cmd",
                "files/SetupComplete.cmd",
                "files/SetupComplete.ps1"
            ],

            "communicator": "winrm",
            "winrm_username": "vagrant",
            "winrm_password": "vagrant",

            "shutdown_command": "C:/Windows/Panther/Unattend/sysprep_shutdown.cmd",
            "shutdown_timeout": "1h",

            "output_directory": "output/{{user `vm_name`}}"
        }
    ],

    "provisioners": [
        {
            "type": "powershell",
            "script": "scripts/perform_dotnet_optimization.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "20s"
        },
        {
            "type": "powershell",
            "script": "scripts/install_vbox_guest_additions.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "only": ["virtualbox"],
            "pause_before": "1m"
        },
        {
            "type": "windows-restart",
            "restart_timeout": "15m",
            "pause_before": "1m"
        },
        {
            "type": "powershell",
            "script": "scripts/prepare_SetupComplete.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "1m"
        },
        {
            "type": "powershell",
            "script": "scripts/prepare_sysprep.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "5s"
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "output/box-file-w2019-{{.Provider}}.box",
            "vagrantfile_template": "files/vagrantfile"
        }
    ]
}