{
    "variables":
    {
        "os_name": "",
        "phase_before": "01base",
        "phase_current": "09sysprep",
        "winrm_username": "",
        "winrm_password": ""
    },

    "builders": [
        {
            "name": "virtualbox",
            "type": "virtualbox-ovf",
            "source_path": "output/{{user `os_name`}}-vbox-{{user `phase_before`}}/{{user `os_name`}}-vbox-{{user `phase_before`}}.ovf",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "4096" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "2" ]
            ],
            "guest_additions_mode": "disable",
            "headless": "{{user `headless`}}",
            "communicator": "winrm",
            "winrm_username": "{{user `winrm_username`}}",
            "winrm_password": "{{user `winrm_password`}}",
            "winrm_timeout": "12h",
            "shutdown_command": "C:/Windows/Panther/Unattend/sysprep_shutdown.cmd",
            "shutdown_timeout": "1h",
            "floppy_files": [
                "files/sysprep_unattend.xml",
                "files/sysprep_shutdown.cmd",
                "files/SetupComplete.cmd",
                "files/SetupComplete.ps1"
            ],
            "output_directory": "output/{{user `os_name`}}-vbox-{{user `phase_current`}}/",
            "vm_name": "{{user `os_name`}}-vbox-{{user `phase_current`}}"
        }
    ],

    "provisioners": [
        {
            "type": "powershell",
            "script": "scripts/perform_dotnet_optimization.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "20s"
        },
        {
            "type": "powershell",
            "script": "scripts/prepare_SetupComplete.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "1m"
        },
        {
            "type": "powershell",
            "script": "scripts/prepare_sysprep.ps1",
            "elevated_user": "{{user `winrm_username`}}",
            "elevated_password": "{{user `winrm_password`}}",
            "pause_before": "5s"
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "keep_input_artifact": true,
            "output": "output/box-file-{{.Provider}}/{{ user `os_name` }}-{{.Provider}}-{{user `phase_current`}}.box",
            "vagrantfile_template": "files/vagrantfile"
        }
    ]
}